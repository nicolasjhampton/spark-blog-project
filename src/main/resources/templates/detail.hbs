{{#partial "content"}}
    {{#with entry}}
    <section>
        <div class="container">
            <div class="entry-list single">
                <article>
                    <h1>{{ title }}</h1>
                    <time datetime="{{ createdAt }}">{{ createdAt }}</time>
                    <div class="entry">
                        <p>{{ entry }}</p>
                        <p><a class="link" href="/entry/{{ slug }}/edit">Edit Entry</a></p>
                    </div>
                </article>
            </div>
        </div>
    </section>
    <section class="entry-comments">
        <div class="container">
            <h2>Comments</h2>
            {{#each comments }}
                <div class="comment">
                    <strong>{{ name }}</strong>
                    <time datetime="{{ createdAt }}">{{ createdAt }}</time>
                    <p>{{ comment }}</p>
                </div>
            {{/each}}
            <div class="new-comment">
                <form action="/entry/{{ slug }}/comments" method="POST">
                    <label for="name"> Name</label>
                    <input type="text" name="name"><br>
                    <label for="comment">Comment</label>
                    <textarea rows="5" name="comment"></textarea>
                    <input type="submit" value="Post Comment" class="button">
                </form>
            </div>
        </div>
    </section>
    {{/with}}
{{/partial}}

{{> base.hbs }}