{{#partial "content"}}
    {{#with "entry"}}
        <section>
            <div class="container">
                <div class="edit-entry">
                    <h2>Edit Entry</h2>
                    <form action="/entry/{{ slug }}/edit" method="POST">
                        <label for="title"> Title</label>
                        <input value="{{ title }}" type="text" name="title"><br>
                        <label for="entry">Entry</label>
                        <textarea value="{{ entry }}" rows="5" name="entry"></textarea>
                        <input type="submit" value="Save Entry" class="button">
                        <a href="#" class="button button-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </section>
    {{/with}}
{{/partial}}

{{> base.hbs }}